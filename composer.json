{
    "name": "hairymada/service-platform",
    "description": "Plateforme de services pour artisans et prestataires Ã  Madagascar",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Olga Henriette VOLANIAINA",
            "email": "oh.volaniaina@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "firebase/php-jwt": "^6.8",
        "phpmailer/phpmailer": "^6.8",
        "vlucas/phpdotenv": "^5.5",
        "intervention/image": "^2.7",
        "ramsey/uuid": "^4.7",
        "monolog/monolog": "^2.9",
        "symfony/http-foundation": "^5.4",
        "symfony/console": "^5.4",
        "twig/twig": "^3.7",
        "nesbot/carbon": "^2.69"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "friendsofphp/php-cs-fixer": "^3.22",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\": "database/",
            "Tests\\": "tests/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-fix": "php-cs-fixer fix",
        "analyze": "phpstan analyze",
        "migrate": "php database/migrate.php",
        "seed": "php database/seed.php",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "platform": {
            "php": "8.1"
        }
    }
}